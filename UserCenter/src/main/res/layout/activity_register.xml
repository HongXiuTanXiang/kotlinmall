<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kotlin.base.weidgets.HeaderBar
        style="@style/MatchWrap"
        app:isShowBack="false"
        app:titleText="注册"
        app:rightText="登录"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/mMobileET"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="请输入手机号码"
            android:layout_height="wrap_content">
        </EditText>
        <Button
            android:id="@+id/mVerrifyButton"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>

    <EditText
        android:id="@+id/mVerifyCodeET"
        android:layout_width="match_parent"
        android:hint="请输入验证码"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:id="@+id/mPwdET"
        android:layout_width="match_parent"
        android:hint="请输入密码"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:id="@+id/mSurePwdET"
        android:layout_width="match_parent"
        android:hint="请确认密码"
        android:layout_height="wrap_content">
    </EditText>

    <Button
        android:id="@+id/mRegisterButton"
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

</LinearLayout>